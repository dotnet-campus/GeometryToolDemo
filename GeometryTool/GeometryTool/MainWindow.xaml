<Window x:Class="GeometryTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Canvas.xaml"/>
                <ResourceDictionary Source="Resources/Adornor.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Canvas x:Name="RootCanvas" Style="{StaticResource CanvasTrigger}" Height="350" Width="525" MouseDown="RootCanvas_MouseDown">
        


        <StackPanel HorizontalAlignment="Left" Height="100" Margin="0,105,0,0" VerticalAlignment="Top" Width="100">
            <RadioButton x:Name="Select"  Content="选择"  GroupName="MouseAction" ToolTip="Select" Click="Select_Click" />
            <RadioButton x:Name="Point"  Content="点"  GroupName="MouseAction" ToolTip="Point" Click="Select_Click" />
            <RadioButton x:Name="Line"  Content="直线"  GroupName="MouseAction" ToolTip="Line" Click="Select_Click" />
    	</StackPanel>
        
    </Canvas>
</Window>
